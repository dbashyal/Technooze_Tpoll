<widgets>
    <tpoll_poll type="tpoll/poll" translate="name description" module="tpoll">
        <name>Polls</name>
        <description>Adds a poll block</description>
        <parameters>
            <enabled_poll>
                <label>Enabled Polls</label>
                <visible>1</visible>
                <required>1</required>
                <type>select</type>
                <source_model>tpoll/poll</source_model>
            </enabled_poll>
            <template translate="label">
                <label>Frontend Template</label>
                <visible>1</visible>
                <required>1</required>
                <type>select</type>
                <value>technooze/tpoll/poll.phtml</value>
                <values>
                    <poll translate="label">
                        <value>technooze/tpoll/poll.phtml</value>
                        <label>Default</label>
                    </poll>
                </values>
            </template>
        </parameters>
    </tpoll_poll>
</widgets>
